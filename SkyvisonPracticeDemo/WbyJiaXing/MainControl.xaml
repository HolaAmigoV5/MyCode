                            </StackPanel>
                        </StackPanel>
                    </UniformGrid>
                </TabItem>
            </TabControl>
        </StackPanel>

        <Image Source="Images/标题bg.png" Grid.Row="3"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Image Source="Images/icon-水箱.png" Width="48" Height="46" Margin="0 0 0 10"/>
            <TextBlock Text="水箱实时监测"  FontSize="26"  Foreground="White" VerticalAlignment="Center" Margin="0 0 0 10"/>
        </StackPanel>

        <lvc:CartesianChart Grid.Row="4" LegendLocation="Top" DataTooltip="{x:Null}" BorderThickness="1 0 0 1" BorderBrush="LightCyan">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries Values="2, 5, 3, 2, 5, 4, 2" Title="动力" Stroke="#00F0FF" Fill="#00F0FF"  StrokeThickness="1" Opacity="0.2"/>
                <lvc:LineSeries Values="1, 2.5, 2, 2.3, 2, 1, 2" Title="空调" Stroke="#F39800" Fill="#F39800" StrokeThickness="1" Opacity="0.2" />
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis ShowLabels="True" MinValue="1" MaxValue="7">
                    <lvc:Axis.Separator>
                        <lvc:Separator Step="1" StrokeThickness="0.1" Stroke="White" StrokeDashArray="30"/>
                    </lvc:Axis.Separator>
                </lvc:Axis>
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis ShowLabels="True" MaxValue="5"/>
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
