                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="360"/>
                                <TextBlock Text="9,995"/>
                            </StackPanel>
                            <StackPanel Margin="5 0 0 0" TextBlock.Foreground="#7ADA95" TextBlock.FontWeight="Bold">
                                <TextBlock Text="↑"/>
