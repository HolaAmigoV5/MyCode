                            </StackPanel>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="Safari"/>
                                <TextBlock Text="4,345"/>
                            </StackPanel>
                            <StackPanel Margin="5 0 0 0" TextBlock.Foreground="#7ADA95" TextBlock.FontWeight="Bold">
                                <TextBlock Text="↑"/>
                                <TextBlock Text="37%"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <StackPanel>
