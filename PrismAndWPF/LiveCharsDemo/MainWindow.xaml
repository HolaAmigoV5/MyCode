                                    <TextBlock Text="$599" FontWeight="Bold" Foreground="#3F4C5D" FontSize="28"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>


                    <Border CornerRadius="5" Background="White" Margin="10">
