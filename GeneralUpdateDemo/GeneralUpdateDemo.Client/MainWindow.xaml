<Window x:Class="GeneralUpdateDemo.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeneralUpdateDemo.Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel>
            <Label x:Name="MyLabel" FontSize="18" HorizontalAlignment="Center" />
            <ProgressBar x:Name="MyProgressBar" Minimum="0" Maximum="100" Width="300" Height="30"/>
            <Button x:Name="MyButton" Content="Launch" HorizontalAlignment="Center" />
        </StackPanel>
    </ScrollViewer>
</Window>
