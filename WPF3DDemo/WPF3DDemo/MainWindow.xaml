        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <Viewport3D>
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0 10 0" LookDirection="0 -10 0" UpDirection="0 0 1" FieldOfView="30"/>
            </Viewport3D.Camera>

            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <AmbientLight Color="White" />
                </ModelVisual3D.Content>
            </ModelVisual3D>

