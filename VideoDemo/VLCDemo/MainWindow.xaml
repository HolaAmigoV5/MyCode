<Window x:Class="VLCDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VLCDemo"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d" Background="#1AF0F8FF"
        Title="MainWindow" Height="800" Width="600">
    
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="切换车棚" Width="100" Height="20" Margin="5" Click="btn_click"/>
            <Button Content="切换高空" Width="100" Height="20" Margin="5" Click="btn_click1"/>
        </StackPanel>
        
        <local:VideoPlayer x:Name="player1"  VideoHeight="300" VideoWidth="500" VideoType="2" VideoUrl="{Binding WebCamURL01}" TitleStr="{Binding WebCamName01}" />
        <local:VideoPlayer x:Name="player2" VideoHeight="300" VideoWidth="500" VideoType="2" VideoUrl="{Binding WebCamURL02}" TitleStr="{Binding WebCamName02}"/>
    </StackPanel>
</Window>
